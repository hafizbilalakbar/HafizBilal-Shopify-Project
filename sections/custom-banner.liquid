<!-- Section code to render the banner -->
<div class="banner">
  <div class="banner__image" style="background-image: url({{ section.settings.image | img_url: 'original' }});">
    {% if section.settings.show_text_box %}
      <div class="banner__text-box">
        <h2>{{ block.settings.heading }}</h2>
        <p>{{ block.settings.text }}</p>
        {% if block.settings.button_label_1 %}
          <a href="{{ block.settings.button_link_1 }}" class="button">{{ block.settings.button_label_1 }}</a>
        {% endif %}
        {% if block.settings.button_label_2 %}
          <a href="{{ block.settings.button_link_2 }}" class="button">{{ block.settings.button_label_2 }}</a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>



{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "First image",
      "info": "Upload the primary image for the banner."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second image",
      "info": "Upload a secondary image if needed."
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "label": "Image overlay opacity",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 1,
      "info": "Adjust the opacity of the overlay on the banner images."
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Banner height",
      "options": [
        { "value": "adapt", "label": "Adapt to first image" },
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium",
      "info": "Select the height of the banner."
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "Desktop content position",
      "options": [
        { "value": "top_left", "label": "Top Left" },
        { "value": "top_center", "label": "Top Center" },
        { "value": "top_right", "label": "Top Right" },
        { "value": "middle_left", "label": "Middle Left" },
        { "value": "middle_center", "label": "Middle Center" },
        { "value": "middle_right", "label": "Middle Right" },
        { "value": "bottom_left", "label": "Bottom Left" },
        { "value": "bottom_center", "label": "Bottom Center" },
        { "value": "bottom_right", "label": "Bottom Right" }
      ],
      "default": "middle_center",
      "info": "Choose the position of the content over the banner image."
    },
    {
      "type": "checkbox",
      "id": "show_text_box",
      "label": "Show container on desktop",
      "default": true,
      "info": "Check this box to show the text container on desktop views."
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image Banner",
          "info": "Enter the heading text for the banner."
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Provide details about the banner image(s) or content.",
          "info": "Enter a description or details about the banner."
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "label": "First button label",
          "default": "Button label",
          "info": "Enter the label for the first button."
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "First button link",
          "info": "Enter the URL for the first button link."
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Second button label",
          "default": "Button label",
          "info": "Enter the label for the second button."
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Second button link",
          "info": "Enter the URL for the second button link."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom banner Image",
      "category": "Image Banner",
      "settings": {
        "image": "shopify://shop_images/default_banner_image.jpg",
        "image_2": "shopify://shop_images/default_banner_image_2.jpg"
      }
    }
  ]
}

{% endschema %}